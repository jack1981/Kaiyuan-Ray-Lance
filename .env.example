# Local Docker defaults
PIPELINE_CONFIG=example/read_write.yaml
SPARK_MASTER=local[*]
PYSPARK_PYTHON=python
JAVA_HOME=/usr/lib/jvm/default-java
LANCE_SPARK_PACKAGE=com.lancedb:lance-spark-bundle-3.5_2.12:0.0.15
LANCE_SPARK_EXTENSIONS=1
DRIVER_MEMORY=6G
EXECUTOR_MEMORY=4G
EXECUTOR_MEMORY_OVERHEAD=1G
EXECUTOR_CORES=4
EXECUTOR_INSTANCES=1

# Kubernetes (kind) defaults
KIND_CLUSTER_NAME=kaiyuan-spark
K8S_NAMESPACE=kaiyuan-spark
K8S_SERVICE_ACCOUNT=spark
SPARK_K8S_IMAGE=kaiyuan-spark-app:latest
K8S_EXECUTOR_INSTANCES=2
K8S_WAIT_TIMEOUT=3600s

# MinIO / S3A defaults for Spark-on-K8s
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio123
MINIO_BUCKET=kaiyuan-spark
MINIO_ENDPOINT=http://minio.kaiyuan-spark.svc.cluster.local:9000
MINIO_SYNC_ENDPOINT=host.docker.internal:30900
SPARK_FILE_UPLOAD_PATH=s3a://kaiyuan-spark/spark-upload
K8S_SAMPLE_PREFIX=s3a://kaiyuan-spark/sample
K8S_OUTPUT_PREFIX=s3a://kaiyuan-spark/output
SPARK_MODEL_FILES=s3a://kaiyuan-spark/models/fasttext_hq.bin,s3a://kaiyuan-spark/models/fasttext_mmlu.bin
SPARK_MODEL_ARCHIVES=s3a://kaiyuan-spark/models/tiny_seq_classifier.zip
